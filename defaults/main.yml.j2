---

# enabled
{{ role_name }}_enabled: no

# defaults
{{ role_name }}_bin_mode: "0755"
{{ role_name }}_file_mode: "0644"
{{ role_name }}_dir_mode: "0755"
{{ role_name }}_owner: "root"
{{ role_name }}_group: "sys"
{{ role_name }}_backup: yes
{{ role_name }}_umask: "022"

# packages
{{ role_name }}_packages_apt: []          # Debian/Ubuntu
{{ role_name }}_packages_pkgng: []        # FreeBSD
{{ role_name }}_packages_openbsd_pkg: []  # OpenBSD
{{ role_name }}_packages_yum: []          # RedHat/CentOS

# config
{{ role_name }}_cfg_dir: "/etc/{{ role_name }}"
{{ role_name }}_cfg_file: "{{ '{{' }} {{ role_name }}_cfg_dir {{ '}}' }}/{{ role_name }}.conf"
#{{ role_name }}_cfg_file_validate:

# overrides
#{{ role_name }}_cfg_dir_mode: "0750"
#{{ role_name }}_cfg_file_mode: "0444"

# service
{{ role_name }}_service: '{{ role_name }}'
